#!/bin/bash

########################
# Reloads arch components. Can be triggerd with SUPER + R
########################

# Kill notifications
killall dunst ; 

# Hyprpanel reload
hyprpanel -q; hyprpanel & disown

# Restore wallpaper
swww restore

# Reload Hyprland config
hyprctl reload

# Restow stuff
~/.dotfiles/stow.sh
