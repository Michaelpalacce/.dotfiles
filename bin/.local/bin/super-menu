#!/bin/bash

export PATH="$HOME/.local/bin:$PATH"

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      args+=("-a" "$index")
    fi
  fi

  echo -e "$options" | rofi -dmenu -i -window-title "$prompt…" "${args[@]}"
}

terminal() {
    alacritty --class Informative -e "$@"
}

show_screenshot_menu() {
  case $(menu "Screenshot" "  Region\n  Window\n  Display") in
  *Region*) hyprshot -m region ;;
  *Window*) hyprshot -m window ;;
  *Display*) hyprshot -m output ;;
  *) show_capture_menu ;;
  esac
}

show_system_menu() {
  case $(menu "System" "󰜉  Reload") in
  *Reload*) reload ;;
  *) show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "󰀻  Apps\n󰉉  Install Package\n  Screenshot\n󰃉  Color\n  System\n  About")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) sherlock ;;
  *install*package*) terminal pkg-install ;;
  *screenshot*) show_screenshot_menu ;;
  *color*) pkill hyprpicker || hyprpicker -a ;;
  *system*) show_system_menu ;;
  *about*) terminal zsh -c 'fastfetch; read -n 1 -s' ;;
  esac
}

if [[ -n "$1" ]]; then
  go_to_menu "$1"
else
  show_main_menu
fi
