#!/bin/bash

export PATH="$HOME/.local/bin:$PATH"

menu() {
  local prompt="$1"
  local options="$2"

  echo -e "$options" | rofi -dmenu -theme "$ROFI_DIR/dmenu.rasi" -i -window-title "$promptâ€¦" "${args[@]}"
}

# infoTerminal displays an informative window
infoTerminal() {
    alacritty --class Informative -e "$@"
}

# xlInfoTerminal displays an informative window
xlInfoTerminal() {
    alacritty --class xl-Informative -e "$@"
}

show_package_menu() {
  case $(menu "Package" "âœ… Install\nâŒ Remove\nï€™ Update System\nï  Back") in
  *Install*) infoTerminal pkg-install ;;
  *Remove*) infoTerminal pkg-remove ;;
  *Update*) infoTerminal yay -Syu --noconfirm ;;
  *) show_main_menu ;;
  esac
}

show_screenshot_menu() {
  case $(menu "Screenshot" "ğŸ”³ Region\nğŸªŸ Window\nğŸ–¥ï¸ Display\nï  Back") in
  *Region*) hyprshot -m region ;;
  *Window*) hyprshot -m window ;;
  *Display*) hyprshot -m output ;;
  *) show_main_menu ;;
  esac
}

show_system_menu() {
  case $(menu "System" "ï˜¥ Resources\nó°œ‰ Reload\nï  Back") in
  *Resources*) infoTerminal htop ;;
  *Reload*) reload ;;
  *) show_main_menu ;;
  esac
}

show_power_menu() {
  case $(menu "Power" "ï€£ Lock\nó°¤„ Suspend\nó°œ‰ Restart\nó°¥ Shutdown\nï  Back") in
  *Lock*) loginctl lock-session ;;
  *Suspend*) systemctl suspend ;;
  *Restart*) systemctl reboot ;;
  *Shutdown*) systemctl poweroff ;;
  *) show_main_menu ;;
  esac
}

show_learn_menu() {
  case $(menu "Learn" "ï„œ  Keybindings\nï™  Hyprland\nó°£‡  Arch\nï  Back") in
  *Keybindings*) hyprland-keybinds ;;
  *Hyprland*) brave "https://wiki.hypr.land/" ;;
  *Arch*) brave "https://wiki.archlinux.org/title/Main_page" ;;
  *) show_main_menu ;;
  esac
}


show_main_menu() {
  go_to_menu "$(menu "Go" "ó°€» Apps\nğŸ˜€ Emoji\nğŸ’¾ Package Management\nğŸ“š Learn\nğŸ“· Screenshot\nğŸ“ˆ Stocks\nï€‘  System\nâš¡ Power\nâ„¹ï¸ About")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) rofi -show drun ;;
  *emoji*) rofi -modi emoji -show emoji ;;
  *package*management*) show_package_menu ;;
  *learn*) show_learn_menu ;;
  *screenshot*) show_screenshot_menu ;;
  *stocks*) xlInfoTerminal ticker --config ~/.ticker.yaml ;;
  *system*) show_system_menu ;;
  *power*) show_power_menu ;;
  *about*) infoTerminal zsh -c 'fastfetch; read -n 1 -s' ;;
  esac
}

if [[ -n "$1" ]]; then
  go_to_menu "$1"
else
  show_main_menu
fi
