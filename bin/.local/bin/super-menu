#!/bin/bash

export PATH="$HOME/.local/bin:$PATH"

menu() {
  local prompt="$1"
  local options="$2"

  echo -e "$options" | rofi -dmenu -theme "$ROFI_DIR/dmenu.rasi" -i -window-title "$prompt…" "${args[@]}"
}

# infoTerminal displays an informative window
infoTerminal() {
    alacritty --class Informative -e "$@"
}

# xlInfoTerminal displays an informative window
xlInfoTerminal() {
    alacritty --class xl-Informative -e "$@"
}

show_package_menu() {
  case $(menu "Package" "✅ Install\n❌ Remove\n Update System\n Back") in
  *Install*) infoTerminal pkg-install ;;
  *Remove*) infoTerminal pkg-remove ;;
  *Update*) infoTerminal yay -Syu --noconfirm ;;
  *) show_main_menu ;;
  esac
}

show_screenshot_menu() {
  case $(menu "Screenshot" "  Region\n  Window\n  Display\n Back") in
  *Region*) hyprshot -m region ;;
  *Window*) hyprshot -m window ;;
  *Display*) hyprshot -m output ;;
  *) show_main_menu ;;
  esac
}

show_system_menu() {
  case $(menu "System" "  Lock\n󰤄  Suspend\n󰜉  Restart\n󰐥  Shutdown\n󰜉  Reload\n Back") in
  *Lock*) loginctl lock-session ;;
  *Suspend*) systemctl suspend ;;
  *Restart*) systemctl reboot ;;
  *Shutdown*) systemctl poweroff ;;
  *Reload*) reload ;;
  *) show_main_menu ;;
  esac
}

show_learn_menu() {
  case $(menu "Learn" "  Keybindings\n  Hyprland\n󰣇  Arch\n Back") in
  *Keybindings*) hyprland-keybinds ;;
  *Hyprland*) brave "https://wiki.hypr.land/" ;;
  *Arch*) brave "https://wiki.archlinux.org/title/Main_page" ;;
  *) show_main_menu ;;
  esac
}


show_main_menu() {
  go_to_menu "$(menu "Go" "󰀻  Apps\n󰉉 Package Management\n󰧑  Learn\n  Screenshot\n  System\n Stocks\n  About")"

}

go_to_menu() {
  case "${1,,}" in
  *apps*) rofi -show drun ;;
  *package*management*) show_package_menu ;;
  *learn*) show_learn_menu ;;
  *screenshot*) show_screenshot_menu ;;
  *system*) show_system_menu ;;
  *stocks*) xlInfoTerminal ticker --config ~/.ticker.yaml ;;
  *about*) infoTerminal zsh -c 'fastfetch; read -n 1 -s' ;;
  esac
}

if [[ -n "$1" ]]; then
  go_to_menu "$1"
else
  show_main_menu
fi
