#!/bin/bash

export PATH="$HOME/.local/bin:$PATH"

menu() {
  local prompt="$1"
  local options="$2"

  echo -e "$options" | rofi -dmenu -theme "$ROFI_DIR/dmenu.rasi" -i -window-title "$promptâ€¦" "${args[@]}"
}

# terminal displays an informative window
terminal() {
    alacritty --class Informative -e "$@"
}

# xlInfoTerminal displays an informative window
xlInfoTerminal() {
    alacritty --class xl-Informative -e "$@"
}

show_package_menu() {
  case $(menu "Package" "âœ… Install Package\nâŒ Remove Package\nï€™ Update System\nâœ… Install WebApp\nâŒ Remove WebApp\nï  Back") in
  *Install*Package*) terminal pkg-install ;;
  *Remove*Package*) terminal pkg-remove ;;
  *Update*System*) terminal yay -Syu --noconfirm ;;
  *Install*WebApp*) terminal webapp-install ;;
  *Remove*WebApp*) terminal webapp-remove ;;
  *) show_main_menu ;;
  esac
}

show_screenshot_menu() {
  case $(menu "Screenshot" "ğŸ”³ Region\nğŸªŸ Window\nğŸ–¥ï¸ Display\nï  Back") in
  *Region*) hyprshot -m region ;;
  *Window*) hyprshot -m window ;;
  *Display*) hyprshot -m output ;;
  *) show_main_menu ;;
  esac
}

show_system_menu() {
  case $(menu "System" "ï˜¥ Resources\nó°œ‰ Reload\nï  Back") in
  *Resources*) terminal htop ;;
  *Reload*) reload ;;
  *) show_main_menu ;;
  esac
}

show_power_menu() {
  case $(menu "Power" "ï€£ Lock\nó°¤„ Suspend\nó°œ‰ Restart\nó°¥ Shutdown\nï  Back") in
  *Lock*) loginctl lock-session ;;
  *Suspend*) systemctl suspend ;;
  *Restart*) systemctl reboot ;;
  *Shutdown*) systemctl poweroff ;;
  *) show_main_menu ;;
  esac
}

show_learn_menu() {
  case $(menu "Learn" "ï„œ  Keybindings\nï™  Hyprland\nó°£‡  Arch\nï  Back") in
  *Keybindings*) hyprland-keybinds ;;
  *Hyprland*) webapp-launch "https://wiki.hypr.land/" ;;
  *Arch*) webapp-launch "https://wiki.archlinux.org/title/Main_page" ;;
  *) show_main_menu ;;
  esac
}

show_news_menu(){
  case $(menu "News" "ğŸ“ˆ Stocks\nï  Back") in
  *Stocks*) xlInfoTerminal ticker --config ~/.ticker.yaml ;;
  *) show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "ó°€» Apps\nğŸ˜€ Emoji\nğŸ’¾ Package Management\nğŸ“š Learn\nğŸ“· Screenshot\nğŸ“° News\nï€‘  System\nâš¡ Power\nâ„¹ï¸ About")"
}

go_to_menu() {
  case "${1,,}" in
  *apps*) rofi -show drun ;;
  *emoji*) hyprland-emoji ;;
  *package*management*) show_package_menu ;;
  *learn*) show_learn_menu ;;
  *screenshot*) show_screenshot_menu ;;
  *news*) show_news_menu ;;
  *system*) show_system_menu ;;
  *power*) show_power_menu ;;
  *about*) terminal zsh -c 'fastfetch; read -n 1 -s' ;;
  esac
}

if [[ -n "$1" ]]; then
  go_to_menu "$1"
else
  show_main_menu
fi
