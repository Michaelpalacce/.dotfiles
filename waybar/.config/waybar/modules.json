{
    "network": {
        "format": "{ifname}",
        "format-wifi": "Ôá´  {signalStrength}% ÔÑ∫ {bandwidthDownBytes} ÔÑπ {bandwidthUpBytes} ",
        "format-ethernet": "Ôäá  ÔÑ∫ {bandwidthDownBytes} ÔÑπ {bandwidthUpBytes} ",
        "format-disconnected": "Not connected",
        "tooltip-format": "Ôäá  {ifname} via {gwaddri}",
        "tooltip-format-wifi": "Ôá´   {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "ÔÉÅ  {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "on-click": "networkmanager_dmenu"
    },
    "custom/logo": {
        "format": "ÔåÉ",
        "on-click": "hyprsysteminfo",
        "on-click-right": "wlogout"
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": "ÔÜí",
            "default": "Ôí™"
        }
    },
    "hyprland/language": {
        "format": "ÔÑú {}",
        "keyboard-name": "razer-pro-type-ultra-keyboard"
    },
    "custom/weather": {
        "format": "{}",
        "return-type": "json",
        "exec": "~/.config/waybar/scripts/weather.sh",
        "interval": 600,
        "on-click": "opera https://wttr.in"
    },
    "custom/clipboard": {
        "format": "Óµª",
        "on-click": "cliphist list | wofi -dmenu | cliphist decode | wl-copy",
        "interval": 86400
    },
    "clock": {
        "format": "{:%I:%M:%S %p}",
        "interval": 1,
        "tooltip-format": "\n<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "calendar-weeks-pos": "right",
        "today-format": "<span color='#7645AD'><b><u>{}</u></b></span>",
        "format-calendar": "<span color='#aeaeae'><b>{}</b></span>",
        "format-calendar-weeks": "<span color='#aeaeae'><b>W{:%V}</b></span>",
        "format-calendar-weekdays": "<span color='#aeaeae'><b>{}</b></span>"
    },
    "disk": {
        "interval": 30,
        "format": "ÔáÄ  {percentage_used}%",
        "path": "/"
    },
    "custom/colorpicker": {
        "format": "{}",
        "return-type": "json",
        "interval": "once",
        "exec": "~/.config/waybar/scripts/colorpicker.sh -j",
        "on-click": "sleep 1 && ~/.config/waybar/scripts/colorpicker.sh",
        "on-click-right": "waypaper",
        "signal": 1
    },
    "cpu": {
        "interval": 1,
        "format": "Ó∫ú {usage}%",
        "min-length": 6,
        "max-length": 6,
        "format-icons": [
            "‚ñÅ",
            "‚ñÇ",
            "‚ñÉ",
            "‚ñÑ",
            "‚ñÖ",
            "‚ñÜ",
            "‚ñá",
            "‚ñà"
        ]
    },
    "memory": {
        "format": "Óâ¶ {percentage}%"
    },
    "temperature": {
        "format": "Ôãâ {temperatureC}¬∞C",
        "format-critical": "Ôãá {temperatureC}¬∞C",
        "interval": 1,
        "critical-threshold": 80,
        "on-click": "foot btop"
    },
    "hyprland/window": {
        "format": "( {class} )",
        "rewrite": {
            "(.*) - Opera": "üåé $1",
            "(.*) - Alacritty": "> [$1]"
        }
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon} Ôäî",
        "format-bluetooth-muted": "Ôö©  {icon} Ôäî",
        "format-muted": "Ôö© ",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶ ",
                "ÔÄ® ",
                "ÔÄ® "
            ]
        },
        "scroll-step": 5,
        "on-click-right": "pavucontrol",
        "on-click": "amixer set Master toggle"
    },
    "pulseaudio#mic": {
        "format": "{icon} {format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ± ",
        "on-scroll-up": "amixer set Capture 5%+",
        "on-scroll-down": "amixer set Capture 5%-",
        "on-click-right": "pavucontrol",
        "on-click": "amixer set Capture toggle"
    },
    "group/sound": {
        "orientation": "horizontal",
        "modules": [
            "pulseaudio",
            "pulseaudio#mic"
        ]
    },
    "tray": {
        "icon-size": 24,
        "spacing": 10
    },
    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "Û±Ö´",
            "none": "Û∞Çö",
            "dnd-notification": "Û±Ö´",
            "dnd-none": "Û∞Çõ",
            "inhibited-notification": "ÔÇ¢",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "ÔÇ¢",
            "dnd-inhibited-none": "ÔÇ¢"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },
    "custom/pulse-text": {
        "format": "ÔÄ® ",
        "scroll-step": 5,
        "on-click-right": "pavucontrol"
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "rotate": 0,
        "device": "pulseaudio",
        "scroll-step": 1
    },
    "group/pulse": {
        "orientation": "horizontal",
        "modules": [
            "custom/pulse-text",
            "pulseaudio/slider"
        ]
    },
    "custom/updates": {
        "format": "{} Update(s)",
        "exec": "checkupdates | wc -l",
        "exec-if": "[[ $(checkupdates | wc -l) != 0 ]]",
        "interval": 600,
        "on-click": "alacritty -e yay -Syu && notify-send 'The system has been updated' "
    }
}
