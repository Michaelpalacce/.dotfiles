{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "spacing": 4, // Gaps between modules (4px)
    "height": 10,
    "margin-top": 4,
    "margin-left": 8,
    "margin-right": 8,
    "mode": "dock",
    "reload_style_on_change": true,
    "include": [
        "~/.config/waybar/modules.json"
    ],
    "modules-left": [
        "custom/logo",
        "clock",
        "custom/weather",
        "disk",
        "memory",
        "cpu",
        "temperature",
        "hyprland/window"
    ],
    "modules-center": [
        "hyprland/workspaces"
    ],
    "modules-right": [
        "tray",
        "custom/updates",
        "hyprland/language",
        "custom/clipboard",
        "custom/colorpicker",
        // "group/pulse",
        "group/sound",
        "network",
        "custom/notification"
    ]
}
