# PERSONAL
export TERM="xterm-256color"

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Kubernetes aliases
alias kubens="kubectl get ns | fzf | awk '{print \$1}' | xargs -o kubectl config set-context --current --namespace"
alias kns="kubens"
alias klog="k get po -o wide -A | awk '{print \$1,\$2}' | fzf | xargs -o kubectl logs -f -n"
alias klogs="klog"

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# This allows you to use tmux-sessionizer to open a new tmux session with a specific command
# or to open a new tmux session with nvim
alias so='tmux-sessionizer "nvim ."'
# This allows you to use tmux-cht to open a new tmux window with the cheat.sh details for a command
alias sc="tmux-cht"
# Bash-btva allows you to execute maven commands and some specific ones for BTVA
alias sm="bash-btva"
# prefer to use nvim instead of vim
alias vim="nvim"
# prefer to use just k instead of kubectl
alias k='kubectl'
# END PERSONAL

