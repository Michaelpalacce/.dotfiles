# PERSONAL
export TERM="xterm-256color"

# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Kubernetes aliases
alias kubens="kubectl get ns | fzf | awk '{print \$1}' | xargs -o kubectl config set-context --current --namespace"
alias kns="kubens"
alias klog="k get po -o wide -A | awk '{print \$1,\$2}' | fzf | xargs -o kubectl logs -f -n"
alias klogs="klog"

alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# # This allows you to use tmux-sessionizer to open a new tmux session with a specific command
# # or to open a new tmux session with nvim
# alias so='tmux-sessionizer "nvim ."'
# tmux-timer allows me to set a timer in a tmux window
alias st='tmux-timer'
# tmux-sshuttle-daddy allows me to sshuttle into a remote server easily
alias ss='tmux-sshuttle-daddy'
# tmux-identity-theft allows me to switch between different identities of different programs. Example: .m2 .npmrc
alias si='tmux-identity-theft'
# This allows you to use tmux-cht to open a new tmux window with the cheat.sh details for a command
alias sc="tmux-cht"
# tmux-exxegutor allows you to execute differnt build commands in different tmux windows
alias sb="tmux-exxegutor"
# prefer to use nvim instead of vim
alias vim="nvim"
alias vi="nvim"
# prefer to use just k instead of kubectl
alias k='kubectl'

# exa
alias l='exa -l'
alias la='exa -la'
alias ll='exa -l --git'
alias lla='exa -la --git'
alias lt='exa --tree --level'


# GIT

# Alias to set the current repo's git author to my personal email
alias gp='git config user.name "Stefan Genov" && git config user.email "stefantigro@gmail.com"'
# Alias to set the current repo's git author to my work email
alias gw='git config user.name "Stefan Genov" && git config user.email "stefan.genov@broadcom.com"'

# END PERSONAL
